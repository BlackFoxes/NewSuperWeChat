<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <ImageView
        android:id="@+id/ivBoutiqueAva"
        android:src="@drawable/nopic"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <RelativeLayout
        android:layout_toRightOf="@+id/ivBoutiqueAva"
        android:layout_width="200dp"
        android:layout_height="200dp">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tvBoutiqueTitle"
            android:text="标题标题标题标题标题"
            android:textColor="@color/item_good_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tvBoutiqueTitle"
            android:layout_marginLeft="15dp"
            android:id="@+id/tvBoutiqueName"
            android:text="标题标题标题标题标题"
            android:textColor="@color/black_deep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/gray_normal"
            android:layout_below="@+id/tvBoutiqueName"
            android:layout_marginLeft="15dp"
            android:id="@+id/tvBoutiqueDescription"
            android:text="标题"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>