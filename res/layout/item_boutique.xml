<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/bd_wallet_white"
    android:layout_height="200dp">
    <ImageView
        android:id="@+id/ivBoutiqueAva"
        android:layout_weight="1"
        android:src="@drawable/nopic"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tvBoutiqueTitle"
            android:text="标题标题标题标题标题"
            android:textColor="@color/item_good_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/tvBoutiqueTitle"
            android:layout_marginLeft="15dp"
            android:id="@+id/tvBoutiqueName"
            android:text="标题标题标题标题标题"
            android:textColor="@color/black_deep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:textColor="@color/gray_normal"
            android:layout_below="@+id/tvBoutiqueName"
            android:layout_marginLeft="15dp"
            android:id="@+id/tvBoutiqueDescription"
            android:text="标题"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>