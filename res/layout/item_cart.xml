<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="8dp"
    android:layout_height="60dp">
    <CheckBox
        android:id="@+id/cb_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="true"
        />

    <ImageView
        android:id="@+id/cart_avatar"
        android:layout_toRightOf="@+id/cb_cart"
        android:src="@drawable/goods_thumb"
        android:layout_width="35dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/name_cart"
        android:layout_toRightOf="@+id/cart_avatar"
        android:text="购物车购物车购物车购物车购物车购物车购物车购物车"
        android:lines="1"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:paddingRight="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/cart_add"
        android:layout_below="@+id/name_cart"
        android:layout_toRightOf="@+id/cart_avatar"
        android:src="@drawable/add_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:id="@+id/count_cart"
        android:layout_toRightOf="@+id/cart_add"
        android:text="(3)"
        android:layout_below="@id/name_cart"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/cart_delete"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/name_cart"
        android:layout_toRightOf="@+id/count_cart"
        android:layout_marginLeft="10dp"
        android:src="@drawable/del_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/price_cart"
        android:layout_centerVertical="true"
        android:text="￥88.8"
        android:textColor="@color/black"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>